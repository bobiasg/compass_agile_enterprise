<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml2/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="generator" content="Knitkit - Compass AE Open source content management platform"/>

  <title><%= @website.title %></title>

  <%= javascript_include_tag :application %>

  <!-- bootstrap -->
  <%= static_javascript_include_tag 'knitkit/bootstrap.min.js' %>
  <%= static_javascript_include_tag 'knitkit/theme.js' %>

  <%= static_stylesheet_link_tag 'knitkit/bootstrap.min.css' %>
  <%= static_stylesheet_link_tag 'knitkit/bootstrap-responsive.min.css' %>
  <%= static_stylesheet_link_tag 'knitkit/custom.css' %>
  <!-- end bootstrap -->

  <%= static_javascript_include_tag('erp_app/utility.js') %>
  <%= static_javascript_include_tag('erp_app/jquery_support.js') %>
  <%= static_javascript_include_tag('erp_app/widgets.js') %>
  <%= static_javascript_include_tag('knitkit/inline_editing.js') %>

  <%= static_stylesheet_link_tag 'knitkit/inline_editing.css' %>
</head>
<body>

  <div id="wrap">

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="navbar-header pull-left">
        <a class="navbar-brand" href="/home"><%= theme_image_tag 'bootstrapdark', 'logo.png' %></a>
      </div>

      <div class="navbar-header pull-right">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
       <span class="login-header">
        <% unless @current_user -%>
          <a href="/home"><span>Login</span></a>
        <% else %>
          <a href="/session/sign_out?login_url=/home"><span>Logout</span></a>
        <% end %>
       </span>

      <div class="container">
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <%= content_for?(:menu) ? yield(:menu) : render_menu(@contents) %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Wrap all page content here -->

    <div class="content-area">
      <%= yield %>
    </div>

  </div>

  <div class="footer">
    <div class="container">
      <p class="text-muted text-center credit">Powered by: <a href="http://compassagile.com">CompassAE</a></p>
    </div>
  </div>

</body>
</html>